<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/detailsLinearLayout"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/tvFirstName"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingVertical="15dp"
            android:paddingLeft="10dp"
            android:text="Prathamesh"
            android:fontFamily="@font/fredoka_one"

            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="start"
            android:id="@+id/tvLastName"
            android:layout_marginRight="40dp"
            android:paddingVertical="15dp"
            android:paddingRight="10dp"
            android:text="Rawool"
            android:fontFamily="@font/fredoka_one"

            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            app:cardCornerRadius="75dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/ivProfilePic"
                android:background="@drawable/circle_image"
                android:scaleType="centerCrop"
                android:src="@drawable/uthappa" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/vLine"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/detailsLinearLayout"
        android:layout_marginVertical="10dp"
        android:background="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:layout_below="@id/vLine"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:padding="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivFavouritesList"
                android:src="@drawable/ic_twotone_favorite_24"
                android:padding="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourites"
                android:id="@+id/tvFavouritesList"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:padding="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivAddress"
                android:src="@drawable/ic_twotone_location_on_24"
                android:padding="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My address book"
                android:id="@+id/tvMyAddressBookList"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:padding="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivMyOrders"
                android:src="@drawable/ic_twotone_shopping_bag_24"
                android:padding="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Orders"
                android:id="@+id/tvMyOrdersList"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:padding="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivShare"
                android:src="@drawable/ic_twotone_share_24"
                android:padding="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:id="@+id/tvShare"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
    </LinearLayout>





</RelativeLayout>